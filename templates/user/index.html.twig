{% extends 'base.html.twig' %}

{% block head %}<link href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
<style>
body{
  margin:0;
}
.sidebar { 
        min-height: 100vh;
        min;
        padding-left:25px;
        padding-right:25px;
        background-color: #001225;
        color:white; }
.content{
  width:100%;
  margin-left:10px;
  justify-content: space-around;
}

.flex{
    display: flex;
}



</style>
<div class="flex">
<div class="sidebar">
  <div class="info">
    <form action="{{ path('Edit User')}}">
        <input class="btn1" type="submit" value="Edit Profile" />
    </form>
    <h3><i class="fa-solid fa-briefcase"></i><br>{{ app.user.job|capitalize }}</h3>
    <h3><i class="fa-solid fa-user"></i><br>{{ app.user.firstname|capitalize }} {{ app.user.lastname|capitalize }}</h3>
    <h3><i class="fa-solid fa-envelope"></i><br>{{ app.user.email |capitalize}}</h3>
    <h3><i class="fa-solid fa-phone"></i><br>{{ app.user.number }}</h3>
    <h3><i class="fa-solid fa-house"></i><br>{{ app.user.adress }}</h3>
    <h3><a class="linkedin"href="{{ app.user.linkedin }}"><i class="fa-brands fa-linkedin"></i><br>{{ app.user.firstname|capitalize }}</a></h3>
    <form action="{{ path('CVof', {'id': app.user.id}) }}">
        <input class="btn1" type="submit" value="Show CV" />
    </form>
    <form action="{{path('app_contact')}}">
        <input class="btn1" type="submit" value="Contact Page" />
    </form>
  </div>
</div>
<div class="content">

  <div class="dad">
    <div>
    <h2><a class="edit" href="{{path('Edit Skills')}}">Edit Skills</a></h2>
    {% for Skills in app.user.Skills %}
    <h4>{{Skills.NAME|capitalize}}    </h4>
    {% endfor %}
    </div>
    <div>
    <h2><a class="edit" href="{{path('Edit Hobby')}}">Edit Hobbies</a></h2>
    {% for Hobbies in app.user.Hobbies %}
    <h4>{{Hobbies.NAME|capitalize}}    </h4>
    {% endfor %}
    </div>
    <div>
    <h2><a class="edit"href="{{path('Edit Lang')}}">Edit Languages</a></h2>
    {% for Lang in app.user.Langs %}
    <h4>{{Lang.NAME|capitalize}}    </h4>
    {% endfor %}
    </div>
    <div>
    <h2><a class="edit"href="{{path('Edit Diplomas')}}">Edit Diplomas</a></h2>
    {% for Diplomas in app.user.Diplomas %}
    <h4>{{Diplomas.NAME|capitalize}}    </h4>
    {% endfor %}
    </div>
    <div>
    <h2><a class="edit" href="{{path('Edit Jobs')}}">Edit Jobs</a></h2>
    {% for Jobs in app.user.Jobs %}
    <h4>{{Jobs.NAME|capitalize}}</h4>
    {% endfor %}
    </div>
  </div>


</div>
</div>

{% endblock %}
