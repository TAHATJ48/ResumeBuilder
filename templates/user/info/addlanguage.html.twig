{% extends 'base.html.twig' %}

{% block title %}Editing {{ app.user.firstname }}'s Profile{% endblock %}

{% block body %}
<div class="">
    <h1>Adding {{ app.user.firstname }}'s Languages</h1>
    {{form(formlang) }}
</div>
<div class="">
{% for Lang in app.user.Langs %}
    <h2>{{Lang.NAME}}</h2>
    <form method="post" action="{{ path('hobby_delete', {'id': Lang.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ Lang.id) }}">
    <button class="btn">Delete</button>
</form>
{% endfor %}

</div>

{% endblock %}
