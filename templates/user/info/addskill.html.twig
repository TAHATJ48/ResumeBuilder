{% extends 'base.html.twig' %}

{% block title %}Editing {{ app.user.firstname }}'s Profile{% endblock %}

{% block body %}
<div class="">
    <h1>Adding {{ app.user.firstname }}'s Skills</h1>
    {{form(form) }}
</div>
<div class="">
{% for Skills in app.user.Skills %}
    <h2>{{Skills.NAME}}</h2>
    <form method="post" action="{{ path('skill_delete', {'id': Skills.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ Skills.id) }}">
    <button class="btn">Delete</button>
</form>
{% endfor %}

</div>
{% endblock %}
