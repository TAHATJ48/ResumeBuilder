{% extends 'base.html.twig' %}

{% block title %}Editing {{ app.user.firstname }}'s Profile{% endblock %}

{% block body %}
<div class="">
    <h1>Adding {{ app.user.firstname }}'s Diplomas</h1>
    {{form(form4) }}
</div>
<div class="">
{% for Diplomas in app.user.Diplomas %}
    <p>{{Diplomas.NAME}}</p>
    <form method="post" action="{{ path('diploma_delete', {'id': Diplomas.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ Diplomas.id) }}">
    <button class="btn">Delete</button>
</form>
{% endfor %}

</div>

{% endblock %}
