{% extends 'base.html.twig' %}

{% block title %}Editing {{ app.user.firstname }}'s Profile{% endblock %}

{% block body %}
<div class="">
    <h1>Adding {{ app.user.firstname }}'s Hobbies</h1>
    {{form(formhobby) }}
</div>
<div class="">
{% for Hobbies in app.user.Hobbies %}
    <h2>{{Hobbies.NAME}}</h2>
    <form method="post" action="{{ path('hobby_delete', {'id': Hobbies.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ Hobbies.id) }}">
    <button class="btn">Delete</button>
</form>
{% endfor %}

</div>

{% endblock %}
