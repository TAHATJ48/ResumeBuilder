{% extends 'base.html.twig' %}

{% block title %}Editing {{ app.user.firstname }}'s Hobbies{% endblock %}

{% block body %}
<style>
.form{
      border-radius: 5px;
  background-color: #f2f2f2;
  padding: 20px;
}
input[type=text] {
  width: 100%;
  padding: 12px 20px;
  margin: 8px 0;
  display: inline-block;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box;
}
button[type=submit] {
  width: 100%;
  background-color:  #00a9b0;
  color: white;
  padding: 14px 20px;
  margin: 8px 0;
  border: none;
  border-radius:4px;
  cursor: pointer;
}
.btnd{
    width: 100%;
  background-color:  red;
  color: white;
  padding: 14px 20px;
  margin: 8px 0;
  border: none;
  border-radius:4px;
  cursor: pointer;  
}
</style>
<div class="flex">
{% include '/info/index.html.twig' %}

<div class="content">
<div class="form">
    <h1>Adding {{ app.user.firstname }}'s Hobbies</h1>
    {{form(formhobby) }}

    <ul>
    {% for Hobbies in app.user.Hobbies %}
    <li><h3>{{Hobbies.NAME|capitalize}}</h3></li>
        <form method="post" action="{{ path('hobby_delete', {'id': Hobbies.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ Hobbies.id) }}">
    <button class="btnd">Delete</button>
    </form>
    {% endfor %}

    </ul>
</div>
</div>
</div>

{% endblock %}
