{% extends 'base.html.twig' %}


{% block body %}


<div class="flex">
<div class="sidebar">
  <div class="info">
    <h3><i class="fa-solid fa-briefcase"></i><br>{{ user.job|capitalize }}</h3>
    <h3><i class="fa-solid fa-user"></i><br>{{ user.firstname|capitalize }} {{ user.lastname|capitalize }}</h3>
    <h3><i class="fa-solid fa-envelope"></i><br>{{ user.email |capitalize}}</h3>
    <h3><i class="fa-solid fa-phone"></i><br>{{ user.number }}</h3>
    <h3><i class="fa-solid fa-house"></i><br>{{ user.adress }}</h3>
    <h3><a class="linkedin" href="{{ user.linkedin }}"><i class="fa-brands fa-linkedin"></i><br>{{ user.firstname|capitalize }}</a></h3>
  </div>
</div>
<div class="content">
  <div class="da">
    <div>
    <h1>Langues</h1>
    <ul>
    {% for Lang in user.Langs %}
    <li><h3>{{Lang.NAME|capitalize}}</h3></li>
    {% endfor %}
    </ul>
    </div>
    <div>
    <h1>Comp√©tences</h1>
    <ul>
    {% for Skills in user.Skills %}
    <li><h3>{{Skills.NAME|capitalize}}</h3></li>
    {% endfor %}
    </ul>
    </div>
    <div> 
    <h1>Hobbies</h1>
    <ul>
    {% for Hobbies in user.Hobbies %}
    <li><h3>{{Hobbies.NAME|capitalize}}</h3></li>
    {% endfor %}
    </ul>
    </div>
  </div>
  <div class="da2">
    <h1>Diplomes</h1>
    {% for Diplomas in user.Diplomas %}
    <h2>{{Diplomas.NAME|capitalize}} <br> {{Diplomas.DATE|date('m-Y')}}</h2>
    <h3>{{Diplomas.SCHOOL|capitalize}}</h3>
    </br>
    {% endfor %}
   </div>
    <div class="da1">
    <h1>Experiences</h1>
    {% for Jobs in user.Jobs %}
    <h2>{{Jobs.NAME|capitalize}}<br>{{Jobs.DATE |date('m-Y')}}</h2>
    <h3>{{Jobs.COMPANY|capitalize}}</h3>
    <h4>{{Jobs.DESCRIPTION|capitalize}}</h4>
    </br>
    {% endfor %}
  </div>


</div>
</div>

{% endblock %}
